{
  "manifest_version": 2,
  "name": "Speed Writer",
  "description": "The Markdown editor with live preview on a new tab",
  "version": "1.1.1",
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
          "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
          },
          "default_title": "Speed Writer"
        },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs"],
  "minimum_chrome_version": "28"
}
